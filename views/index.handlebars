{{# each newDisplay}}
<div class="col-md-12">
<div class="panel panel-default">
  <div class="panel-heading"><h3>{{snippet}}</h3></div>
  <div class="panel-body">
    <p>
      {{description}}
    </p>
      <a href="{{url}}">
      <img src={{urlimage}} alt="No Image" class="img-thumbnail" href={{url}}>
    </a>
    <div>
  <canvas id="{{_id}}" width="400" height="200"></canvas>
  <script>
  var ctx = document.getElementById('{{_id}}');
  var myChart = new Chart(ctx, {
      type: 'bar',
      data: {
          labels: [ "sadness","Joy", "fear", "disgust", "anger"],

          datasets: [{
              data: [{{sadness}},{{Joy}}, {{fear}}, {{disgust}}, {{anger}}],
              backgroundColor: [
                  'rgba(255, 99, 132, 0.2)',
                  'rgba(54, 162, 235, 0.2)',
                  'rgba(255, 206, 86, 0.2)',
                  'rgba(75, 192, 192, 0.2)',
                  'rgba(153, 102, 255, 0.2)',
                  'rgba(255, 159, 64, 0.2)'
              ],
              borderColor: [
                  'rgba(255,99,132,1)',
                  'rgba(54, 162, 235, 1)',
                  'rgba(255, 206, 86, 1)',
                  'rgba(75, 192, 192, 1)',
                  'rgba(153, 102, 255, 1)',
                  'rgba(255, 159, 64, 1)'
              ],
              borderWidth: 1
          }]
      },
      options: {
          scales: {
              yAxes: [{
                  ticks: {
                      beginAtZero:true
                  }
              }]
          }
      }
  });
</script>
</div>
  </div>
</div>
</div>
{{/each}}

